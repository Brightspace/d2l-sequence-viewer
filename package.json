{
  "name": "d2l-sequence-viewer",
  "version": "0.0.48",
  "description": "Polymer replacement for the sequenced activity viewer",
  "appId": "urn:d2l:fra:class:sequence-viewer",
  "private": true,
  "scripts": {
    "postinstall": "polymer install",
    "lint:html": "eslint *.html demo/*.html test/*.html",
    "lint": "npm run lint:html",
    "test": "npm run lint && polymer test --skip-plugin sauce",
    "clean": "rimraf build && rimraf dist",
    "prestart": "gulp build-locales && polymer analyze > analysis.json",
    "build:polymer": "polymer build",
    "resolver": "frau-local-appresolver",
    "build:app": "npm run build:polymer && npm run build:appjs && npm run build:indexfra && npm run build:vulcanize",
    "build:appjs": "browserify -t [ babelify ] app.js | uglifyjs > build/default/app.js",
    "build:indexfra": "ncp index.html build/default/index.html",
    "build:images": "mkdirp dist/components/ && ncp images dist/components/images/",
    "build:vulcanize": "vulcanize --inline-css --inline-scripts --strip-comments build/default/index.html > dist/d2l-sequence-viewer.html",
    "build:lang": "gulp build-locales && ncp locales.json dist/locales.json",
    "build": "npm run clean && npm run build:appconfig && npm run build:app && npm run build:lang && npm run build:images",
    "start": "polymer serve",
    "build:appconfig": "frau-appconfig-builder",
    "publish:cdn": "DateStamp=$(date \"+%s\") && frau-publisher --devtag $DateStamp"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/d2l-sequence-viewer.git"
  },
  "config": {
    "frauAppConfigBuilder": {
      "appFile": "d2l-sequence-viewer.html",
      "dist": "./dist",
      "envVar": "TRAVIS",
      "loader": "iframe"
    },
    "frauLocalAppResolver": {
      "appClass": "urn:d2l:fra:class:enhanced-sequence-viewer"
    },
    "frauPublisher": {
      "files": "./dist/**",
      "moduleType": "app",
      "targetDirectory": "d2l-sequence-viewer",
      "creds": {
        "key": "AKIAJSUZXLSOWGASCTAQ",
        "secretVar": "CDN_SECRET"
      },
      "versionVar": "TRAVIS_TAG"
    }
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babelify": "^8.0.0",
    "bower-art-resolver": "^2.0.9",
    "browserify": "^16.2.2",
    "chai-dom": "^1.8.0",
    "eslint": "^4.2.0",
    "eslint-config-brightspace": "^0.3.1",
    "eslint-plugin-html": "^3.1.0",
    "frau-appconfig-builder": "^0.1.0",
    "gulp": "^3.9.1",
    "gulp-merge-json": "^1.3.1",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "polymer-cli": "^1.7.2",
    "polymer-siren-test-helpers": "^1.0.0",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.4.0",
    "uglifyjs": "^2.4.11",
    "vulcanize": "^1.16.0"
  }
}
